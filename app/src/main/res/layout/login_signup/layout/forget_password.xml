<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.forget_password">

    <EditText
        android:id="@+id/phoneNum"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="72dp"
        android:hint="输入绑定的手机号"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/verificationCode"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:hint="输入验证码"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneNum" />


    <TextView
        android:id="@+id/sendCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="发送验证码"
        android:textColor="#ED8E8E"
        app:layout_constraintBottom_toBottomOf="@id/phoneNum"
        app:layout_constraintEnd_toEndOf="@+id/phoneNum" />

    <EditText
        android:id="@+id/newPsw1"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="输入新密码"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verificationCode" />

    <EditText
        android:id="@+id/newPsw2"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="再次输入新密码"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newPsw1" />

    <Button
        android:id="@+id/resetPswBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="重置"
        app:layout_constraintRight_toRightOf="@id/newPsw2"
        app:layout_constraintTop_toBottomOf="@+id/newPsw2" />

    <Button
        android:id="@+id/cancelResetPswBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="取消"
        app:layout_constraintLeft_toLeftOf="@id/newPsw2"
        app:layout_constraintTop_toBottomOf="@+id/newPsw2" />
</androidx.constraintlayout.widget.ConstraintLayout>