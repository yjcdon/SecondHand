<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.ForgetPassword">


    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="148dp"
        android:hint="输入绑定的手机号"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextStuNum"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="76dp"
        android:hint="输入学号"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNewPsw"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="232dp"
        android:ems="10"
        android:hint="输入新密码"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNewPsw2"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="316dp"
        android:ems="10"
        android:hint="再次输入新密码"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnResetPsw"
        android:layout_width="269dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:text="重置密码"
        app:layout_constraintRight_toRightOf="@id/editTextNewPsw2"
        app:layout_constraintTop_toBottomOf="@+id/editTextNewPsw2" />

</androidx.constraintlayout.widget.ConstraintLayout>